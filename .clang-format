Language: Cpp
BasedOnStyle: llvm
IncludeBlocks: Regroup
IncludeCategories:
  - Regex: '^"json_rpc/.*"'
    Priority: 3
  - Regex: "^<(nlohmann|spdlog|catch2)/.*>"
    Priority: 2
  - Regex: "^<.*>"
    Priority: 1
IncludeIsMainRegex: '^slangd/[A-Za-z0-9_]+\\.h'
AlignAfterOpenBracket: DontAlign
AllowShortFunctionsOnASingleLine: false
BreakInheritanceList: AfterColon
