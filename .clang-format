Language: Cpp
BasedOnStyle: llvm
IncludeBlocks: Regroup
IncludeCategories:
  - Regex: '^"jsonrpc/.*"'
    Priority: 3
  - Regex: "^<(jsonrpc|nlohmann|spdlog|BS_thread_pool|catch2).*>"
    Priority: 2
  - Regex: "^<.*>"
    Priority: 1
AlignAfterOpenBracket: DontAlign
AllowShortFunctionsOnASingleLine: false
BreakInheritanceList: AfterColon
